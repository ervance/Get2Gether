<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="comp380.get2gether.FormActivity"
    tools:showIn="@layout/activity_form">


    <!--The following XML document controls the layout of "Create" button for our application
    When the user chooses create, they will be taken to this form which they will need to
    complete (or go back) in order to place the pin-->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/completeForm"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventName"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/completeForm"
        android:text="Event Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventType"
        android:layout_below="@+id/eventName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:layout_alignEnd="@+id/eventName"
        android:text="Event Type" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/eventTime"
        android:layout_below="@+id/eventType"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:text="Event Time" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getLat"
        android:layout_below="@+id/eventTime"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:layout_toStartOf="@+id/completeForm" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getLong"
        android:layout_below="@+id/getLat"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_alignEnd="@+id/getLat" />

</RelativeLayout>
