<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comp380.get2gether.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginLogo"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/logInButton"
        android:layout_below="@+id/passwordLogin"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="password"
        android:ems="10"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:id="@+id/passwordLogin"
        android:layout_below="@+id/userLogin"
        android:layout_alignStart="@+id/userLogin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="User Name"
        android:id="@+id/userLogin"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_below="@+id/loginLogo"
        android:layout_alignStart="@+id/loginLogo" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_user"
        android:id="@+id/newUser"
        android:layout_below="@+id/logInButton"
        android:layout_alignEnd="@+id/logInButton"
        android:layout_alignStart="@+id/logInButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/user_not_found"
        android:id="@+id/userNotFound"
        android:layout_below="@+id/newUser"
        android:textColor="@color/red"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
